{
  "name": "lntip-wc",
  "description": "A base template for building a shareable web components library with Vite + Svelte",
  "version": "0.0.0",
  "type": "module",
  "module": "dist/lib/lntip-wc.js",
  "main": "dist/lib/lntip-wc.umd.js",
  "scripts": {
    "start": "npm run dev -s",
    "dev": "vite --config vite.demo.config.ts --host",
    "build": "vite build",
    "build:demo": "vite build --config vite.demo.config.ts",
    "preview": "vite preview --config vite.demo.config.ts",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "prepublishOnly": "npm run build -s"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^2.0.2",
    "@tsconfig/svelte": "^3.0.0",
    "autoprefixer": "^10.4.13",
    "daisyui": "^2.50.0",
    "lnurl-pay": "^2.1.1",
    "lottie-web": "^5.10.2",
    "postcss": "^8.4.21",
    "svelte": "^3.52.0",
    "svelte-check": "^3.0.3",
    "svelte-preprocess": "^5.0.1",
    "svelte-qrcode-image": "^1.0.0-rc.2",
    "tailwindcss": "^3.2.4",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4",
    "vite": "^4.0.4",
    "vite-plugin-node-polyfills": "^0.7.0"
  },
  "files": [
    "dist/lib"
  ]
}
